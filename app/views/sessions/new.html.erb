
 
<h1 align="center">Welcome to MessageMe - a complete chatApp </h1>
<h2 class="ui center aligned icon header">
<i class="circular  orange power off icon"></i>
Login to continue
</h2>

<div class="ui placeholder fluid raised segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
    <%= form_with scope: :session, local: true,:html => {class: "ui form",role:"form"},url: login_path do |form| %>
    
        <div class="field">
          <label>Username</label>
          <div class="ui left icon input">
            
            <%= form.text_field :Username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <label>Password</label>
          <div class="ui left icon input">
            <%= form.password_field :password, placeholder: "password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        
        <%= form.button "Login", class: "ui orange submit button" %>
        <% end %>
      
    </div>
    
    <div class="middle aligned column">
     
    
    
      <%= button_to 'Signup', signup_path ,method: :get, class: "ui orange submit button"%>
      
      </div>
        
       
    
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>